<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Main3Activity">
    <com.example.administrator.oisee.Video.AudioButton
        android:id="@+id/id_recoderbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/str_re_nom"
        android:textColor="#727272"
        android:background="@drawable/btn_re_nom"
        android:minHeight="0dp"
        >
    </com.example.administrator.oisee.Video.AudioButton>
    <com.github.fastshape.MyTextView
        android:id="@+id/id_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="完成"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:solidColor="@color/red_button"
        app:pressColor="@color/red_press"
        app:radius="4dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        />

</LinearLayout>