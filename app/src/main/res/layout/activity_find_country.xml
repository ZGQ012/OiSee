<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.FindCountryActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/toolbar_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="true"
            android:src="@drawable/back_white"
            android:text="@string/title_activity_login"
            android:textSize="20sp" />

        <com.github.fastshape.MyLinearLayout
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            app:solidColor="#FFFAFAFC"
            app:radius="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                />
            <com.github.fastshape.MyEditText
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:hint="@string/chazhaoguojia"
                android:textSize="8sp"
                app:hiddenClearIcon="true"
                />

        </com.github.fastshape.MyLinearLayout>
        <TextView
            android:id="@+id/toolbar_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="@string/quxiao"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </android.support.v7.widget.Toolbar>

</LinearLayout>