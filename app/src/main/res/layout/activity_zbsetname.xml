<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color"
        >
        <com.example.administrator.oisee.View.MyEditText
            android:id="@+id/et_set_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            app:solidColor="@color/white"
            android:inputType="text"
            android:imeOptions="actionNext"
            app:all_line="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            app:radius="4dp"
            app:borderWidth="1px"
            android:hint="昵称"
            />
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_set_name_complete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="完成"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:solidColor="@color/red_button"
            app:pressColor="@color/red_press"
            app:radius="4dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>
</LinearLayout>