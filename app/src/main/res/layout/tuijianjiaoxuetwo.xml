<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:gravity="center_vertical"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.fastshape.MyImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img"
            app:clipRadius="35dp" />

        <com.github.fastshape.MyTextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="2dp"
            app:all_line="true"
            app:borderColor="@color/white"
            app:borderWidth="1dp"
            app:radius="8dp"
            app:solidColor="#FF56D690" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:text="Gearuite"
            android:textColor="@color/gray_33" />

        <TextView
            android:id="@+id/Retotext"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:text="aidehua非常擅长托福考试,获取哈弗博士学位，现任哈弗博士导师.."
            android:textColor="@color/gray_99"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/piceText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.2元/分"
                android:textColor="#FFFF7171"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/guojiImage"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:src="@drawable/usa" />

            <com.github.fastshape.MyTextView
                android:id="@+id/guojiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="美国"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>